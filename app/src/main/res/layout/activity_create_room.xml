<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page"
    tools:context="com.NakshatraTechnoHub.HubSched.Ui.Dashboard.CreateRoomActivity">

    <LinearLayout
        android:id="@+id/emp_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Create Room"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/emp_action_bar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/background_page">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:hint="Room No"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"

                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_room_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textAppearance="@style/TextStyle"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:hint="Room Name"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_room_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/TextStyle"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:hint="Seat Capacity"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_room_seat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textAppearance="@style/TextStyle"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:hint="Floor No"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_room_floor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textAppearance="@style/TextStyle"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:id="@+id/create_room_facilities"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_42sdp">

                        <TextView
                            android:id="@+id/text"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:text="Facilities"
                            android:textSize="@dimen/_13sdp" />




                    </RelativeLayout>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectedFacilitiesView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                android:maxLines="12"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:layout_marginHorizontal="@dimen/_12sdp"
                                android:text="Select Employee"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>




            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_11sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/imge"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/image_gallery" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selectImages"
                android:layout_width="@dimen/_266sdp"

                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_14sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:src="@drawable/baseline_add_a_photo_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:layout_toEndOf="@+id/img"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Add Room Photos"
                        android:textSize="@dimen/_11sdp" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.button.MaterialButton

                android:id="@+id/create_room_btn"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_20sdp"

                android:text="Add Room"
                app:cornerRadius="@dimen/_11sdp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>