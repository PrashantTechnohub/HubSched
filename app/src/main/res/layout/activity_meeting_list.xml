<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page"
    tools:context=".Ui.Dashboard.MeetingListActivity">

    <RelativeLayout
        android:id="@+id/emp_action_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

        <RelativeLayout
            android:id="@+id/actionBar_layout"
            android:visibility="visible"
            android:layout_toEndOf="@id/back"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="Meeting List"
                android:textColor="@color/black"
                android:textSize="@dimen/_17sdp" />

            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:id="@+id/search_meet"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_toStartOf="@id/add_meeting"
                android:src="@drawable/baseline_search_24" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/add_meeting"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/baseline_add_circle_outline_24" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/search_bar_layout"
            android:visibility="gone"
            android:layout_toEndOf="@id/back"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search_bar"
                android:hint="Search"
                android:layout_toStartOf="@id/close_search"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/close_search"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/baseline_close_24" />

        </RelativeLayout>




    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/emp_action_bar"
        android:layout_centerInParent="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meeting_list_recyclerview"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/no_result"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_centerInParent="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/no_result"
        android:visibility="gone" />

</RelativeLayout>