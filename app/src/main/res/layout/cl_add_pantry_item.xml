<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_20sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_14sdp"
    app:cardElevation="@dimen/_50sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="start"
                android:text="Item Name"
                android:textColor="@color/fontBlack"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close_dialog"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/baseline_close_24" />


            </RelativeLayout>


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/ll1"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@color/grey" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pantryItemRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/item_edittext"
            android:layout_below="@id/view" />


        <EditText
            android:id="@+id/item_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_above="@id/ll2"
            android:textSize="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/edittext_bg"
            android:hint="Item Name" />




        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_4sdp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:id="@+id/add_pantry_item_btn"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/fadeBlue"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                app:cornerRadius="@dimen/_14sdp"
                android:textColor="@color/purple_700"
                android:text="Add" />

            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="1dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:id="@+id/save_pantry_item_btn"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/fadeGreen"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                app:cornerRadius="@dimen/_14sdp"
                android:textColor="@color/green"
                android:text="Save" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>