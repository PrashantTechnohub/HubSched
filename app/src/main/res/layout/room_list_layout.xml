<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_14sdp">

    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_75sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                    android:text="Room ID  "/>

            <TextView
                android:id="@+id/room_id"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="wrap_content"
                android:textColor="@color/purple_500"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="MAK889845"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_75sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="Name  "/>

            <TextView
                android:id="@+id/room_name"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="wrap_content"
                android:textColor="@color/purple_500"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="Prashant Deshmukh"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_75sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="Floor  "/>

            <TextView
                android:id="@+id/room_floor"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="wrap_content"
                android:textColor="@color/purple_500"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="Prashant Deshmukh"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_75sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="Seats"/>

            <TextView
                android:id="@+id/room_seats"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="wrap_content"
                android:textColor="@color/purple_500"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="Android Developer"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_75sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="Facilities"/>

            <TextView
                android:id="@+id/room_facilities"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="wrap_content"
                android:textColor="@color/purple_500"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="Android Developer"/>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/llremark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llpriority"
            android:gravity="center_vertical|left"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Remarks :"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_comment"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:hint="Enter Remarks"
                android:lines="4"
                android:padding="7dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ01234556789, "
                android:singleLine="false"
                android:gravity="top|left"
                android:focusableInTouchMode="true"
                android:textColor="@color/black"
                />



        </LinearLayout>



        <View
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="#DFDFDF" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/schedule_meeting_btn"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_25sdp"
                app:cornerRadius="@dimen/_14sdp"
                android:backgroundTint="#1F9324"
                android:textSize="@dimen/_7sdp"
                android:text="Schedule Meeting"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/remove_meeting_btn"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="@dimen/_25sdp"
                app:cornerRadius="@dimen/_14sdp"
                android:textSize="@dimen/_7sdp"
                android:backgroundTint="#F44336"
                android:text="Remove Room"/>


        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>