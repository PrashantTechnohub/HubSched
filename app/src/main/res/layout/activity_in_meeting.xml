<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_page"
    android:layout_height="match_parent"
    tools:context=".Ui.Dashboard.InMeetingActivity">


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
      android:layout_margin="@dimen/_10sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

        <RelativeLayout
            android:id="@+id/actionBar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/back"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="Ongoing Meeting"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/back"
            android:visibility="gone">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@id/close_search"
                android:hint="Search">

            </EditText>

            <ImageView
                android:id="@+id/close_search"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/baseline_close_24" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/InMeetingRL"
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/_10sdp">



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_14sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/organized_by"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:text="Organizer"
                        android:textColor="@color/fontBlack"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:text="Prashant Deshmukh"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:text="Subject"
                        android:textColor="@color/fontBlack"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/subject"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:text="Demo Meeting"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_below="@id/ll2"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:text="End in"
                        android:textColor="@color/fontBlack"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/time_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:text="Demo Meeting"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>






            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_below="@id/cardView1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:id="@+id/showQrCodeBtn"
                    android:layout_weight="1"
                    app:cardMaxElevation="@dimen/_4sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:cardCornerRadius="@dimen/_14sdp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/baseline_qr_code_24" />
                        <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show QR"
                            android:fontFamily="@font/montserrat_semibold"/>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
                <View
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="0dp"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:id="@+id/chat_discussion_btn"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_70sdp"
                    app:cardCornerRadius="@dimen/_14sdp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/baseline_chat_24" />
                        <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discussion"
                            android:fontFamily="@font/montserrat_semibold"/>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/inMeeting_member_btn"

                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:cardCornerRadius="@dimen/_14sdp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/baseline_people_24" />
                        <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Members"
                            android:fontFamily="@font/montserrat_semibold"/>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
                <View
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="0dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:id="@+id/pantry_btn"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_70sdp"
                    app:cardCornerRadius="@dimen/_14sdp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/baseline_fastfood_24" />
                        <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pantry"
                            android:fontFamily="@font/montserrat_semibold"/>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_70sdp"
                    app:cardCornerRadius="@dimen/_14sdp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/baseline_support_agent_24" />
                        <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support"
                            android:fontFamily="@font/montserrat_semibold"/>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
                <View
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="0dp"/>



            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qrCodeRL"
        android:visibility="gone"
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">





        <TextView
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:id="@+id/text1"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Scan QR Code"
            android:textColor="@color/fontBlack"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:id="@+id/text2"
            android:gravity="center"
            android:layout_below="@id/text1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="Scan this code to verify your profile"
            android:textColor="@color/fontBlack"
            android:textSize="@dimen/_16sdp" />


        <ImageView
            android:id="@+id/qr_code_image"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_280sdp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/hideQr_btn"
            android:layout_height="wrap_content"
            android:layout_below="@id/qr_code_image"
            app:cornerRadius="@dimen/_14sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Hide QR Code"/>


    </RelativeLayout>



</RelativeLayout>